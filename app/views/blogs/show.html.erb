<div class="container padding-bottom-100">
  <div class="pt-5">
    <h1 class="text-center learn-title"><%= @blog.title%></h1>
    <% if @is_admin_user %>
      <div class="d-flex justify-content-around">
        <%= link_to '編集', edit_blog_path(@blog) %> 
        <%= link_to '削除', blog_path(@blog), method: :delete %>
      </div>
    <% end %>
    <p class="text-center" style="color: #666666;">作成日：<%= datetime_disp(@blog.created_at) %></p>
    <%= image_tag(@blog.thumbnail.variant(resize: "1000x300"), class: 'w-100 event-img text-center mb-2') %>
    <div class="">
      <%= @blog.content%>
    </div>
  </div>
</div>
