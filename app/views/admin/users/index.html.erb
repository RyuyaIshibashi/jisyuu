<div class="container col-md-8 col-lg-6">
  <h1 class="p-2" style="font-size: 30px;font-weight: bold;">ユーザー管理</h1>
  <%= search_form_for(@q, url: admin_users_path) do |f| %>
    <%= f.label :family_name_or_first_name_cont, '検索したいユーザー名を入力してください' %>
    <div class="d-flex">
      <%= f.search_field :family_name_or_first_name_cont, class: 'form-control', style: 'height: 40px;' %>
      <%= f.submit '検索', class: 'sign-up-btn' %>
    </div>
  <% end %>

  <h2 class="mt-4" style="font-size: 20px;font-weight: bold;">ユーザー一覧</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">名前</th>
        <th scope="col">メールアドレス</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
          <tr>
            <td><%= link_to(user.view_full_name, admin_user_path(user)) %></td>
            <td><%= user.email %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate(@users) %>
</div>