<div class="main signup-outer">
  <div class="container col-lg-5 col-md-5 signup-inner">
    <div class="signup-form ">
    <h2 class="devise-title">パスワード再設定</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "新しいパスワード" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワードの確認" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "パスワードを再設定する", class: 'sign-up-btn btn-block mt-3' %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>

    </div>
  </div>
</div>
