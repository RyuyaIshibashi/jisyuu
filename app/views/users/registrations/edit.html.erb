<div class="main mt-5">
  <div class="container col-lg-5 col-md-5">
    <div class="signup-form">

    <h2 class="text-center mb-3">ユーザー情報編集</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="row">
        <div class="col-6">
          <div class="field mb-3">
            <%= f.label '姓' %><span style="font-size:10px;" class="ml-2 badge badge-danger">必須</span><br />
            <%= f.text_field :family_name, autofocus: true, class: 'form-control' %>
          </div>
        </div>
        <div class="col-6">
          <div class="field mb-3">
            <%= f.label '名' %><span style="font-size:10px;" class="ml-2 badge badge-danger">必須</span><br />
            <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-6">
          <div class="field mb-4">
            <%= f.label 'セイ' %><span style="font-size:10px;" class="ml-2 badge badge-danger">必須</span><br />
            <%= f.text_field :family_name_kana, autofocus: true, class: 'form-control' %>
          </div>
        </div>
        <div class="col-6">
          <div class="field mb-4">
            <%= f.label 'メイ' %><span style="font-size:10px;" class="ml-2 badge badge-danger">必須</span><br />
            <%= f.text_field :first_name_kana, autofocus: true, class: 'form-control' %>
          </div>
        </div>
      </div>

      <div class="field">
        <%= f.label :gender, '性別', {class: 'form-label'} %><span style="font-size:10px;" class="ml-2 badge badge-danger">必須</span>
      </div>
      <div class="row">
        <div class="col-sm-12 btn-group mb-4" data-toggle="buttons">
          <label class="btn btn-outline-secondary active" style="width:50%">
            <%= f.radio_button :gender, 'male', {checked: true} %> 男性
          </label>
          <label class="btn btn-outline-secondary" style="width:50%">
            <%= f.radio_button :gender, 'female', {} %> 女性
          </label>
        </div>
      </div>

      <div class="field">
        <%= f.label :birthdate, '生年月日' %><span style="font-size:10px;" class="ml-2 badge badge-danger">必須</span>
      </div>
      <div class="birth_date_field mb-4 ">
        <%= f.date_select :birthdate, {
          use_month_numbers: true,
          start_year: 1930,
          end_year:   (Time.zone.now.year - 15),
          date_separator: ' / ',
        },
        { class: 'form-control', style: 'width: 30%; display: inline-block;'}
      %>
      </div>
      
      <div class="field mb-4">
        <%= f.label :email %><span style="font-size:10px;" class="ml-2 badge badge-danger">必須</span><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field mb-4">
        <%= f.label 'プロフィール写真' %><span style="font-size:10px;" class="ml-2 badge badge-danger">必須</span><br />
        <% if @user.avatar.attached? %>
          <%= image_tag(@user.avatar.variant(resize: "150x150"), class: 'w-100 event-img text-center mb-2') %>
        <% end %>
        <%= f.file_field :avatar, class: 'p-3', style: 'border: solid 1px lightgray;width:100%;border-radius:5px;' %>
      </div>

      <div class=" mb-4 form-group">
        <%= f.label '居住地' %><span style="font-size:10px;" class="ml-2 badge badge-danger">必須</span><br />
        <%= f.collection_select(:pref_id, CountriesPref.all, :id, :name, {}, class: 'form-control', selected: current_user.pref_id.present? ? current_user.pref_id : 13) %>
      </div>

      <div class=" mb-4 form-group">
        <%= f.label '職業' %><span style="font-size:10px;" class="ml-2 badge badge-danger">必須</span><br />
        <%= f.collection_select(:users_category_id, UsersCategory.all, :id, :name, {}, class: 'form-control', selected: current_user.users_category_id.present? ? current_user.users_category_id : '') %>
      </div>

      <div class=" mb-4 form-group">
        <%= f.label '職種' %><span style="font-size:10px;" class="ml-2 badge badge-danger">必須</span><br />
        <%= f.collection_select(:users_job_category_id, UsersJobCategory.all, :id, :name, {}, class: 'form-control', selected: current_user.users_job_category_id.present? ? current_user.users_job_category_id : '') %>
      </div>

      <div class="field mb-4">
        <%= f.label '学習する事' %><span style="font-size:10px;" class="ml-2 badge badge-danger">必須</span><br />
        <%= f.text_field :studying, autofocus: true, class: 'form-control' %>
      </div>

      <div class="field mb-4">
        <%= f.label '自己紹介' %><br />
        <%= f.text_area :introduction, autofocus: true, class: 'form-control', rows: 8 %>
      </div>

      <div class="field">
        <%= f.label :password %> <i></i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "更新する", class: 'sign-up-btn btn-block mt-3' %>
      </div>
    <% end %>

    </div>
  </div>
</div>

