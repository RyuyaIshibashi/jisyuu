<div class="container col-lg-6 col-md-6" style="margin-bottom: 100px;">
  <h1 class="pt-5 mb-4" style="font-size: 20px;font-weight: bold;"><i class="fas fa-flag icon-color mr-2"></i>過去イベント一覧</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th style="width: 33%;">開催日</th>
        <th style="width: 40%;">イベント名</th>
        <th style="width: 27%;"></th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr style="height: 75px;">
          <td><%= event.event_date_shape %></td>
          <td><%= link_to(event.title, event_path(event)) %></td>
          <td><%= link_to("コピー", copy_event_path(event), class: 'signup-button d-block text-decoration-none text-center', method: :post) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate(@events) %>
</div>
